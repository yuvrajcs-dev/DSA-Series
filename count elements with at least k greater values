class Solution {
    public int countElements(int[] nums, int k) {
        int n=nums.length;
        Arrays.sort(nums);
        
        if(k==0){
            return n;
        }
        if(k>n){
            return 0;
        }
        int result=nums[n-k];
        int count=0;
        for(int x :nums){
            if(x<result){
                count++;
            }
        }
        return count;
    }
}
